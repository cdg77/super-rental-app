<div class="jumbotron text-center">
  <h2 class="">List of Available Rentals for: </h2>
  <h4><%= @city.name %>, <%= @city.state %> | <%= @city.country %></h4>
</div>


<% if @city.rentals.any? %>
  <h4>Available now to view: </h4>
  <ul>
    <% @city.rentals.each do |rental| %>
      <li>
        <%= rental.owner %><br>
        <%= rental.kind %><br>
        <%= image_tag rental.image %><br>
        <%= rental.bedrooms %>
      </li>

      <p><%= link_to " | Delete this Rental", city_rental_path(@city, rental),
                                        :data => {:confirm => "You sure you want to delete this?",
                                                  :method => "delete"}%></p>
                                                  <hr>
    <% end %>
  </ul>
<% else %>
  <h4>list of available rentals coming soon... !</h4>
<% end %>
  <p><%= link_to " | Add a Rental", new_city_rental_path(@city) %></p>

 <br><hr>
<p><%= link_to "Return to list of cities", cities_path %></p>
<p><%= link_to "Edit", edit_city_path(@city) %></p>
<p><%= link_to "Delete", city_path(@city),
                        :data => {:confirm => "You sure you want to delete this?",
                                  :method => "delete"} %></p>
