<% content_for(:title, "Find My Place | Welcome!") %>

<div class="container">
  <h1>Cities</h1>
  <ul>
    <div class="well-lg">
      <% @cities.each do |city| %>
        <li><%= link_to city.name, city_path(city) %></li>
      <% end %>
    </div>
  </ul>

  <hr>

  <%= link_to "Add a New City", new_city_path, id:"new_city_link", remote: true %>

</div>
